<section class="orders-show">

  <header class="page-header">
    <h1>Order #<%= @order.id %></h1>
  </header>

  <div class="order-summary jumbotron">
    <h4>Thank you for your order <%= @order.email %>!</h4>
  </div>

  <table class="table table-bordered">
    <thead>
      <tr>
        <th colspan="3">Product</th>
        <th>Quantity</th>
        <th>Total price</th>
      </tr>
    </thead>
    <tbody>
    <% @order.line_items.each do |line_item| %>
      <tr>
        <td><%= line_item.product.name %></td>
        <td><%= image_tag line_item.product.image.thumb, class: 'main-img', style: 'width: 100px' %></td>
        <td width="45%"><%= line_item.product.description %></td>
        <td align="center"><%= line_item.quantity %></td>
        <td align="center"><%= line_item.total_price %></td>
      </tr>
    <% end %>
    </tbody>
    <tfoot>
      <tr>
        <td colspan="4"><strong>Total:</strong></td>
        <td align="center"><strong><%= @order.total_cents %></strong></td>
      </tr>
    </tfoot>
  </table>

  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>

</section>
